{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "ESNext",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    ".vscode"
  ],
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "vitest.config.ts",
    "vitest.utils.ts",
    "vitest.setup.ts"
  ]
}